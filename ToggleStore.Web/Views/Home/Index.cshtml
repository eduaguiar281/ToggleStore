@{
    ViewData["Title"] = "Home";
}

<h1>Conheça nossos planos</h1>
<br />
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a class="nav-link text-dark" asp-area="" asp-controller="Conteudo" asp-action="Fundamentos">
                <img class="d-block w-100" src="../images/PerfilPadrao.png?auto=yes&bg=777&fg=555&text=First slide" alt="First slide">
            </a>
        </div>
        <div class="carousel-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Conteudo" asp-action="Avancado">
                <img class="d-block w-100" src="../images/PerfilExpert.png?auto=yes&bg=666&fg=444&text=Second slide" alt="Second slide">
            </a>
        </div>
        <div class="carousel-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Conteudo" asp-action="Arquitetura">
                <img class="d-block w-100" src="../images/PerfilPremium.png?auto=yes&bg=555&fg=333&text=Third slide" alt="Third slide">
            </a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>